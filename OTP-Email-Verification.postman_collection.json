{
  "info": {
    "_postman_id": "otp-email-verification",
    "name": "OTP Email Verification",
    "description": "API collection for OTP-based Email Verification Microservice",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/v1/auth/health",
          "host": ["{{base_url}}"],
          "path": ["v1", "auth", "health"]
        }
      }
    },
    {
      "name": "Register User",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": ["pm.environment.set('email', pm.response.json().user.email);"]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"TestPassword123\",\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/v1/auth/register",
          "host": ["{{base_url}}"],
          "path": ["v1", "auth", "register"]
        }
      }
    },
    {
      "name": "Request OTP",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": ["pm.environment.set('token', pm.response.json().token);"]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{base_url}}/v1/auth/request-otp?email={{email}}",
          "host": ["{{base_url}}"],
          "path": ["v1", "auth", "request-otp"],
          "query": [
            {
              "key": "email",
              "value": "{{email}}"
            }
          ]
        }
      }
    },
    {
      "name": "Verify OTP",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": ["pm.environment.set('jwt_token', pm.response.json().token);"]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{email}}\",\n  \"otp\": \"000000\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/v1/auth/verify-otp",
          "host": ["{{base_url}}"],
          "path": ["v1", "auth", "verify-otp"]
        }
      }
    },
    {
      "name": "Login",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": ["pm.environment.set('jwt_token', pm.response.json().token);"]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{base_url}}/v1/auth/login?email={{email}}&password=TestPassword123",
          "host": ["{{base_url}}"],
          "path": ["v1", "auth", "login"],
          "query": [
            {
              "key": "email",
              "value": "{{email}}"
            },
            {
              "key": "password",
              "value": "TestPassword123"
            }
          ]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080/api",
      "type": "string"
    },
    {
      "key": "email",
      "value": "",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    }
  ]
}
